{% extends 'base.html.twig' %}

{% block title %}Sites
{% endblock %}

{% block content_header %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Sites</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Sites</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between">
        <h5 class="mt-4 mb-2">Liste des sites</h5>
        <a href="{{ path('app_site_new') }}" class="btn btn-sm btn-primary">Créer un site</a>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sites</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Url</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for site in sites %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ site.name }}</td>
                            <td>{{ site.url }}</td>
                            <td>
                                <button type="button" class="btn btn-default fa fa-eye" data-toggle="dropdown"></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item"
                                       href="{{ path('app_site_show', {'id': site.id}) }}">Détails</a>
                                    <a class="dropdown-item" href="{{ path('app_site_show_zones', {'id': site.id}) }}">Zones</a>
                                </div>

                                <a href="{{ path('app_site_edit', {'id': site.id}) }}"
                                   class="btn btn-primary fa fa-edit"></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                // "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
{% endblock %}