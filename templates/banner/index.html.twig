{% extends 'base.html.twig' %}

{% block title %}Banières
{% endblock %}

{% block content_header %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Banières</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Banières</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between">
        <h5 class="mt-4 mb-2">Liste des banières</h5>
        <a href="{{ path('app_banner_new') }}" class="btn btn-sm btn-primary">Créer une banière
        </a>
    </div>

    <div class="row">
        {% for banner in banners %}
            <a href="{{ path('app_banner_show', {'id': banner.id}) }}">
                <div class="col-md-12 col-lg-6 col-xl-4">
                    <div class="card mb-2">
                        <img class="card-img-top" src="{{ asset('uploads/banners/' ~ banner.imageUrl) }}"
                             alt="Dist Photo 3" style="aspect-ratio: 305/203">
                        <div class="card-img-overlay">
                            <h5 class="card-title text-primary">{{ banner.name }}</h5>
                            <p class="card-text pb-1 pt-1 text-white">
                                {% for campaign in banner.campaigns %}
                                    {{ campaign.name }} {% if not loop.last %} <br> {% endif %}
                                {% endfor %}
                            </p>
                            <a href="#" class="text-primary">Last update 3 days ago</a>
                        </div>
                    </div>
                </div>
            </a>
        {% else %}
            <p class="m-auto">Aucune banière disponible</p>
        {% endfor %}
    </div>
{% endblock %}
